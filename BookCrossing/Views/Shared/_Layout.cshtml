<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/css/bootstrap.min.css" rel="stylesheet" type="text/css"/>
</head>
<body>
    <div class="container">
        <header class="d-flex flex-wrap align-items-center justify-content-center justify-content-md-between py-3 mb-4 border-bottom">
            <a href="/" class="d-flex align-items-center col-md-3 mb-2 mb-md-0 text-dark text-decoration-none">
                <svg class="bi me-2" width="40" height="32" role="img" aria-label="Bootstrap"><use xlink:href="~/img/book-svgrepo-com.svg"></use></svg>
            </a>

            <ul class="nav col-12 col-md-auto mb-2 justify-content-center mb-md-0">
                <li><a class="nav-link px-2 link-dark" asp-controller="Home" asp-action="Index">Главная</a></li>
                <li><a class="nav-link px-2 link-dark" asp-controller="Books" asp-action="List">Книги</a></li>
                <li><a class="nav-link px-2 link-dark" asp-controller="Departments" asp-action="List">Пункты выдачи</a></li>
                <li><a class="nav-link px-2 link-dark" asp-controller="IssueBook" asp-action="Index">Корзина</a></li>
                <li><a href="#" class="nav-link px-2 link-dark">About</a></li>
            </ul>

            <div class="col-md-3 text-end">
                <button type="button" class="btn btn-outline-primary me-2">Login</button>
                <button type="button" class="btn btn-primary">Sign-up</button>
            </div>
        </header>
    </div>
    <div>
        @RenderBody()
    </div>
    <script src="~/js/bootstrap.min.js"></script>
    <div class="container">
        <footer class="d-flex flex-wrap justify-content-between align-items-center py-3 my-4 border-top">
            <p class="col-md-4 mb-0 text-muted">© 2022 Vakhrushin Sergey</p>

            <a href="/" class="col-md-4 d-flex align-items-center justify-content-center mb-3 mb-md-0 me-md-auto link-dark text-decoration-none">
                <svg class="bi me-2" width="40" height="32"><use xlink:href="~/img/book-svgrepo-com.svg"></use></svg>
            </a>

            <ul class="nav col-md-4 justify-content-end">
                <li><a href="/" class="nav-link px-2 link-secondary">Главная</a></li>
                <li><a href="/Books/List" class="nav-link px-2 link-dark">Книги</a></li>
                <li><a href="/Departments/List" class="nav-link px-2 link-dark">Пункты выдачи</a></li>
                <li class="nav-item"><a href="#" class="nav-link px-2 text-muted">FAQs</a></li>
                <li class="nav-item"><a href="#" class="nav-link px-2 text-muted">About</a></li>
            </ul>
        </footer>
    </div>
</body>
</html>
