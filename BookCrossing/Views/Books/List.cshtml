<div class="container text-center">
    <div class="row">
        <div class="col-sm-4">
            <div class="d-flex flex-column flex-shrink-0 p-3 bg-light" style="width: 280px;">
                <span class="fs-4">Фильтр по жанрам</span>
                <hr>
                <ul class="nav nav-pills flex-column mb-auto">
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" asp-controller="Books" asp-action="List">Все</a>
                    </li>
                    <li class="nav-item">
                        @{
                            foreach (var genre in Model.AllGenres)
                            {
                                <a class="nav-link" aria-current="page" asp-controller="Books" asp-action="List" asp-route-genreId="@genre.Id">@genre.GenreName</a>
                            }
                        }

                    </li>
                </ul>
            </div>
        </div>
        <div class="col-sm-8">
            <div class="display-6"> @ViewBag.Title: @ViewBag.BookCount шт.</div>
            <div class="display-8"> @ViewBag.Genre </div>
            <br />

            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
                @{
                    foreach (Book book in Model.AllBooks)
                    {
                        <div class="col">
                            <div class="card shadow-sm">

                                <div class="card-body">
                                    <p class="card-title ">@book.Name</p>
                                    <p class="card-subtitle">@book.Author</p>
                                    <p class="card-text">@book.PublicationYear</p>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div class="btn-group">
                                            <a class="btn btn-sm btn-outline-secondary" asp-controller="IssueBook" asp-action="AddToIssue" asp-route-bookId="@book.Id">Добавить</a>
                                        </div>
                                        <small class="text-muted">@book.Genre.GenreName</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</div>




